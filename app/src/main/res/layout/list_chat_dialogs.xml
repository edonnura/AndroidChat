<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">


    <com.mikhaellopez.circularimageview.CircularImageView

        android:id="@+id/image_chatDialog"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_person"
        app:civ_border_color="#dfe5e7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/image_chatDialog"
        android:orientation="vertical">

    <TextView
        android:id="@+id/list_chat_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/list_chat_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

</LinearLayout>

<ImageView
android:layout_alignParentRight="true"
android:layout_centerVertical="true"
android:id="@+id/image_undread"
android:layout_width="20dp"
android:layout_height="20dp" />

    </RelativeLayout>